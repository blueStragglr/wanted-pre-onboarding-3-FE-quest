{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*", "./test/**/*", "./jest.config.js"],
  "exclude": ["node_modules"]
}
