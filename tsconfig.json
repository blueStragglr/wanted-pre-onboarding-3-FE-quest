{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@apis/*": ["apis/*"],
      "@apis": ["apis"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],
      "@pages/*": ["pages/*"],
      "@pages": ["pages"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@theme/*": ["theme/*"],
      "@projects/types/*": ["types/*"],
      "@projects/types": ["types"],
      "@utils": ["utils"]
    }
  },
  "include": [
    "vite.config.ts",
    ".eslintrc.json",
    "src",
    "tailwind.config.cjs",
    "postcss.config.cjs"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
