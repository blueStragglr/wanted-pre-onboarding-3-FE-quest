{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"],
      "components/*": ["components/*"],
      "views/*": ["views/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
